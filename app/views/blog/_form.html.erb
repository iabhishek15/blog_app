<div class = 'container-fluid'>
  <%= form_with(model: article, url: article_create_path, local:true) do |form| %>
    <% if article.errors.any? %>
      <h4><%= pluralize(article.errors.count, "error") %> prohibited this user from being saved:</h4>
      <% article.errors.full_messages.each do |message| %>
        <ul>
          <li><%= message %></li>
        </ul>
      <% end %>
    <% end %>
    <div class ='form-group'>
      <%= form.label 'Title' %>
      <%= form.text_field :title,class:'form-control' %>
    </div>
    <div class ='form-group'>
      <%= form.label 'Content'%>
      <%= form.text_area :content,class:'form-control',id:'articleContent' %>
    </div>
    <%= form.submit 'post',class:'btn btn-primary'%>
  <% end %>
</div>
<style>
  #articleContent {
    height:300px;
  }
</style>