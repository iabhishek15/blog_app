<div class = 'container-fluid'>
  <% if @article.errors.any? %>
    <% @article.errors.full_messages.each do |message| %>
      <ul>
        <li><%= message %></li>
      </ul>
    <% end %>
  <% end %>
  <%= form_with(model: @article, url: article_create_path) do |form| %>
    <div class ='form-group'>
      <%= form.label 'Title' %>
      <%= form.text_field :title,class:'form-control' %>
    </div>
    <div class ='form-group'>
      <%= form.label 'Content'%>
      <%= form.text_area :content,class:'form-control',id:'articleContent' %>
    </div>
    <%= form.submit 'post',class:'btn btn-primary'%>
  <% end %>
</div>
<style>
  #articleContent {
    height:300px;
  }
</style>